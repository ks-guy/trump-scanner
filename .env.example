# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="mysql://trump_scanner:trump_scanner_password@localhost:3306/trump_scanner"
DB_HOST=localhost
DB_PORT=3306
DB_NAME=trump_scanner
DB_USER=trump_scanner
DB_PASSWORD=trump_scanner_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# File Storage
UPLOAD_DIR=documents/legal/pdfs
MAX_FILE_SIZE=100mb
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,mp4,mp3

# Media Processing
FFMPEG_PATH=/usr/bin/ffmpeg
MAX_VIDEO_DURATION=3600
VIDEO_QUALITY=high
THUMBNAIL_SIZE=320x180

# Scraping
SCRAPING_INTERVAL=3600000
MAX_CONCURRENT_SCRAPES=5
USER_AGENT="Trump Scanner Bot/1.0"
PROXY_LIST=proxies.txt
REQUEST_DELAY=2000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ALERTMANAGER_PORT=9093
LOGSTASH_PORT=5044
FILEBEAT_PORT=5000

# Security
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
ERROR_LOG_PATH=error_logs/error.log
ACCESS_LOG_PATH=logs/access.log

# Backup
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 0 * * *"

# API Keys (replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key
AZURE_API_KEY=your_azure_api_key

# Feature Flags
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_ENTITY_EXTRACTION=true
ENABLE_TRANSCRIPTION=true
ENABLE_VIDEO_PROCESSING=true
ENABLE_BACKUP=true
ENABLE_MONITORING=true 