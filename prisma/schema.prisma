generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model LegalDocument {
  id          Int      @id @default(autoincrement())
  url         String   @unique
  title       String
  content     String   @db.Text
  source      String
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  quotes      Quote[]
  metadata    Json?
}

model Quote {
  id              Int           @id @default(autoincrement())
  text            String        @db.Text
  context         String        @db.Text
  sourceUrl       String
  sourceType      String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  legalDocument   LegalDocument? @relation(fields: [legalDocumentId], references: [id])
  legalDocumentId Int?
  metadata        Json?
}

model Source {
  id        Int      @id @default(autoincrement())
  url       String   @unique
  type      String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  metadata  Json?
}

model Document {
  id        Int      @id @default(autoincrement())
  url       String   @unique
  content   String
  type      String
  metadata  String?
  sourceId  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  source    Source?  @relation(fields: [sourceId], references: [id])

  @@index([type])
  @@index([sourceId])
}

model Analysis {
  id        Int      @id @default(autoincrement())
  quoteId   Int
  type      String
  result    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([quoteId])
}
